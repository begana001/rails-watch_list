<div class="banner_big">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <%= link_to "Get started now!", root_path, class: "button_big" %>
  </div>
</div>

<%# user experiences %>
<%= render 'ux_card' %>

<div class="banner_middle">
  <h1>Now shut up and create a list</h1>
  <%= link_to "create list", new_list_path, class: "button_big" %>
</div>

<h2>JUST REVIEWED...</h2>
<ul class="just-reviewd list-inline">
  <% @movies.take(10).each do |movie| %>
    <li>
      <a href="<%= movie_path(movie) %>">
        <%= image_tag movie.poster_url, class: "poster_small" %>
      </a>
    </li>
  <% end %>
</ul>

<h2>POPULAR REVIEWS THIS WEEK... </h2>
<% @movie_reviews.each do |review| %>
  <%= image_tag review.movie.poster_url, class: "poster_small" %>
  <h2><%= review.movie.title %></h2>
  <h4>username / rating:<%= review.rating %></h4>
  <p><%= review.comment %></p>
<% end %>


<h2>POPULAR LISTS THIS WEEK...</h2>
<% @lists.each do |list| %>
  <div class="list-card_small">
    <h1><%= list.name %></h1>
    <p>username <%= list.like %>like 00comment</p>
  </div>
<% end %>

