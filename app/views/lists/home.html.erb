<h1>Home</h1>

<h2>
  <%= link_to "create new list", new_list_path %>
</h2>

<h2>Lists</h2>
<% @lists.each do |list| %>
  <h2>
    <%= link_to list.name, list_path(list) %>
    / <%= link_to "edit", edit_list_path(list) %>
    / <%= link_to "delete", list_path(list), method: :delete, data: { confirm: "are you sure?" } %>
  </h2>
<% end %>

<h2>Movies</h2>
<% @movies.take(3).each do |movie| %>
  <%= image_tag movie.poster_url %>
  <h2>
    <%= link_to movie.title, movie_path(movie) %>
  </h2>
  <h5>
    rating: <%= movie.rating %> / like: <%= movie.like %>
  </h5>
  <p><%= movie.overview %></p>
<% end %>
