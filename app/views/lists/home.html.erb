<div class="banner_big">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <%= link_to "Get started now!", root_path, class: "button_big" %>
  </div>
</div>

<%# user experiences %>
<%= render 'ux_card' %>

<div class="banner_middle">
  <h1>Now shut up and create a list</h1>
  <%= link_to "create list", new_list_path, class: "button_big" %>
</div>

<h2>
  <%= link_to "create new list", new_list_path %>
</h2>

<h2>Lists</h2>
<% @lists.each do |list| %>
  <h2>
    <%= link_to list.name, list_path(list) %>
    / <%= link_to "edit", edit_list_path(list) %>
    / <%= link_to "delete", list_path(list), method: :delete, data: { confirm: "are you sure?" } %>
  </h2>
<% end %>

<h2>Movies</h2>
<% @movies.take(3).each do |movie| %>
  <%= image_tag movie.poster_url %>
  <h2>
    <%= link_to movie.title, movie_path(movie) %>
  </h2>
  <h5>
    rating: <%= movie.rating %> / like: <%= movie.like %>
  </h5>
  <p><%= movie.overview %></p>
<% end %>
